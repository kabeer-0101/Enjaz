<body>

    <header>
        <div>
            <div style="font-size: 14px; color: var(--text-sec)">مرحباً بك</div>
            <h1 id="currentDateTitle">...</h1>
        </div>
        <div class="month-label" id="monthDisplay"></div>
    </header>

    <div class="calendar-container">
        <div class="weekdays">
            <div>أحد</div><div>إثنين</div><div>ثلاثاء</div><div>أربعاء</div><div>خميس</div><div>جمعة</div><div>سبت</div>
        </div>
        <div class="days-grid" id="daysGrid">
            </div>
    </div>

    <div class="modal-overlay" id="taskModal">
        <div class="modal-content">
            <div class="modal-header">
                <h2 id="modalDateTitle" style="margin:0;">المهام</h2>
                <button class="close-btn" onclick="closeModal()">✕</button>
            </div>

            <div class="task-input-group">
                <input type="text" id="taskInput" placeholder="أضف مهمة جديدة...">
                <button id="addTaskBtn" onclick="addTask()">إضافة</button>
            </div>

            <ul class="tasks-list" id="tasksList">
                </ul>

            <button class="finish-day-btn" onclick="closeModal()">حفظ وإغلاق</button>
        </div>
    </div>

    <script>
        // --- Logic & State ---
        const daysGrid = document.getElementById('daysGrid');
        const monthDisplay = document.getElementById('monthDisplay');
        const currentDateTitle = document.getElementById('currentDateTitle');
        const taskModal = document.getElementById('taskModal');
        const modalDateTitle = document.getElementById('modalDateTitle');
        const tasksList = document.getElementById('tasksList');
        const taskInput = document.getElementById('taskInput');

        let currentDate = new Date();
        let selectedDateKey = null; // format: "YYYY-MM-DD"
        
        // Load data from LocalStorage
        let data = JSON.parse(localStorage.getItem('habitTrackerData')) || {};

        function init() {
            renderCalendar();
            // Display today's date in header
            const options = { weekday: 'long', day: 'numeric' };
            currentDateTitle.innerText = currentDate.toLocaleDateString('ar-SA', options);
        }

        function renderCalendar() {
            daysGrid.innerHTML = '';
            
            const year = currentDate.getFullYear();
            const month = currentDate.getMonth();

            const firstDayIndex = new Date(year, month, 1).getDay();
            const lastDay = new Date(year, month + 1, 0).getDate();

            // Month Label
            const monthNames = ["يناير", "فبراير", "مارس", "أبريل", "مايو", "يونيو", "يوليو", "أغسطس", "سبتمبر", "أكتوبر", "نوفمبر", "ديسمبر"];
            monthDisplay.innerText = `${monthNames[month]} ${year}`;

            // Padding days (empty spaces before 1st of month)
            for (let i = 0; i < firstDayIndex; i++) {
                const emptyDiv = document.createElement('div');
                daysGrid.appendChild(emptyDiv);
            }

            // Days
            const today = new Date();
            for (let i = 1; i <= lastDay; i++) {
                const dayDiv = document.createElement('div');
                dayDiv.classList.add('day');
                dayDiv.innerText = i;

                const dateKey = `${year}-${String(month + 1).padStart(2, '0')}-${String(i).padStart(2, '0')}`;
                
                // Highlight Today
                if (i === today.getDate() && month === today.getMonth() && year === today.getFullYear()) {
                    dayDiv.classList.add('today');
                }

                // Check Status Logic
                if (data[dateKey]) {
                    const tasks = data[dateKey].tasks || [];
                    if (tasks.length > 0) {
                        const allDone = tasks.every(t => t.done);
                        if (allDone) {
                            dayDiv.classList.add('status-done');
                        } else {
                            // If user added tasks but didn't finish, and the day is in the past or today
                            dayDiv.classList.add('status-failed');
                        }
                    }
                }

                dayDiv.onclick = () => openDay(dateKey, i);
                daysGrid.appendChild(dayDiv);
            }
        }

        function openDay(dateKey, dayNumber) {
            selectedDateKey = dateKey;
            modalDateTitle.innerText = `مهام يوم ${dayNumber}`;
            taskModal.classList.add('active');
            renderTasks();
        }

        function closeModal() {
            taskModal.classList.remove('active');
            renderCalendar(); // Re-render to update colors based on changes
        }

        function renderTasks() {
            tasksList.innerHTML = '';
            if (!data[selectedDateKey]) {
                data[selectedDateKey] = { tasks: [] };
            }

            const tasks = data[selectedDateKey].tasks;

            tasks.forEach((task, index) => {
                const li = document.createElement('li');
                li.classList.add('task-item');
                if(task.done) li.classList.add('completed');

                li.innerHTML = `
                    <span class="task-text">${task.text}</span>
                    <div style="display:flex; align-items:center;">
                        <button class="delete-btn" onclick="deleteTask(${index})">حذف</button>
                        <label class="checkbox-wrapper">
                            <input type="checkbox" ${task.done ? 'checked' : ''} onchange="toggleTask(${index})">
                            <span class="checkmark"></span>
                        </label>
                    </div>
                `;
                tasksList.appendChild(li);
            });
            saveData();
        }

        function addTask() {
            const text = taskInput.value.trim();
            if (text === "") return;

            if (!data[selectedDateKey]) {
                data[selectedDateKey] = { tasks: [] };
            }

            data[selectedDateKey].tasks.push({ text: text, done: false });
            taskInput.value = '';
            renderTasks();
            
            // Auto focus back to input for quick adding
            taskInput.focus();
        }

        function toggleTask(index) {
            data[selectedDateKey].tasks[index].done = !data[selectedDateKey].tasks[index].done;
            renderTasks();
        }

        function deleteTask(index) {
            data[selectedDateKey].tasks.splice(index, 1);
            renderTasks();
        }

        function saveData() {
            localStorage.setItem('habitTrackerData', JSON.stringify(data));
        }

        // Initialize App
        init();

    </script>
</body>
</html>
